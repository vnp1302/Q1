# Production Environment Variables
NODE_ENV=production

# JWT Configuration (Use strong secrets in production)
JWT_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}

# Database Configuration
DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}

# Encryption Keys (Managed by secret management system)
ENCRYPTION_KEY=${ENCRYPTION_KEY}
LOG_SIGNING_KEY=${LOG_SIGNING_KEY}

# API Keys (Stored in secure vault)
EXCHANGE_API_KEY_BINANCE=${EXCHANGE_API_KEY_BINANCE}
EXCHANGE_SECRET_BINANCE=${EXCHANGE_SECRET_BINANCE}

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
MAX_LOGIN_ATTEMPTS=3

# Monitoring
LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true
SIEM_ENDPOINT=${SIEM_ENDPOINT}
ALERT_WEBHOOK_URL=${ALERT_WEBHOOK_URL}

# External Services
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}

# Biometric Authentication
WEBAUTHN_ORIGIN=${WEBAUTHN_ORIGIN}
WEBAUTHN_RP_ID=${WEBAUTHN_RP_ID}
WEBAUTHN_RP_NAME=Q2 Token Platform

# Compliance
GDPR_ENABLED=true
PCI_DSS_ENABLED=true
FINANCIAL_COMPLIANCE_ENABLED=true

# Security Headers
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';

# Vault Configuration
VAULT_ENDPOINT=${VAULT_ENDPOINT}
VAULT_TOKEN=${VAULT_TOKEN}
VAULT_NAMESPACE=${VAULT_NAMESPACE}
