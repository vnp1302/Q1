    "name": "Q2 Token Platform Team",
    "email": "dev@q2token.com",
    "url": "https://q2token.com"
  },
  "license": "UNLICENSED",
  "homepage": "https://q2token.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/q2-token/platform.git"
  },
  "bugs": {
    "url": "https://github.com/q2-token/platform/issues",
    "email": "security@q2token.com"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development next dev --turbo",
    "dev:secure": "cross-env NODE_ENV=development HTTPS=true next dev --turbo",
    "build": "cross-env NODE_ENV=production next build",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "build:docker": "docker build -f docker/Dockerfile -t q2-token-platform:latest .",
    "build:docker:security": "docker build -f docker/security/Dockerfile -t q2-token-platform:secure .",
    "start": "next start",
    "start:prod": "cross-env NODE_ENV=production next start",
    
    "lint": "next lint --config .eslintrc.security.js",
    "lint:fix": "next lint --fix --config .eslintrc.security.js",
    "lint:security": "eslint . --config .eslintrc.security.js --ext .js,.jsx,.ts,.tsx",
    "lint:sonar": "eslint . --config .eslintrc.sonar.js --format json -o reports/eslint-report.json",
    "type-check": "tsc --noEmit --incremental",
    "type-check:watch": "tsc --noEmit --watch",
    
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:unit": "jest --testPathPattern=__tests__/unit --passWithNoTests",
    "test:unit:security": "jest --testPathPattern=__tests__/security/unit --passWithNoTests",
    "test:integration": "jest --testPathPattern=__tests__/integration --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:security": "playwright test tests/security --reporter=html",
    "test:e2e:headed": "playwright test --headed",
    "test:security": "npm run test:unit:security && npm run test:e2e:security && npm run security:scan",
    "test:performance": "playwright test tests/performance --reporter=html",
    "test:accessibility": "playwright test tests/accessibility --reporter=html",
    
    "security:audit": "npm audit --audit-level=moderate --json > reports/npm-audit.json",
    "security:audit:fix": "npm audit fix --audit-level=moderate",
    "security:scan": "npx @nodesecure/scanner --input . --output reports/security-scan.json",
    "security:snyk": "snyk test --severity-threshold=medium --json > reports/snyk-report.json",
    "security:snyk:monitor": "snyk monitor",
    "security:semgrep": "semgrep --config=auto --json --output=reports/semgrep-report.json .",
    "security:codeql": "codeql database analyze --format=json --output=reports/codeql-report.json",
    "security:sri": "bash scripts/security/frontend/generate-sri.sh",
    "security:headers": "node scripts/security/validate-headers.js",
    "security:csp": "node scripts/security/csp/validate-policy.js",
    "security:secrets": "truffleHog --json --output=reports/secrets-scan.json .",
    "security:container": "bash scripts/container-security/scan-images.sh",
    "security:dependencies": "bash scripts/security/audit-dependencies.sh",
    "security:full": "npm run security:audit && npm run security:scan && npm run security:snyk && npm run security:secrets",
    
    "i18n:extract": "i18next-scanner --config i18next-scanner.config.js",
    "i18n:validate": "node scripts/i18n/validate-translations.js",
    "i18n:missing": "node scripts/i18n/find-missing-keys.js",
    "i18n:unused": "node scripts/i18n/find-unused-keys.js",
    "i18n:sync": "node scripts/i18n/sync-translations.js",
    
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx scripts/database/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:backup": "bash scripts/database/backup.sh",
    "db:restore": "bash scripts/database/restore.sh",
    
    "blockchain:compile": "hardhat compile",
    "blockchain:test": "hardhat test",
    "blockchain:deploy": "hardhat run scripts/deploy.ts",
    "blockchain:verify": "hardhat verify",
    
    "monitoring:setup": "bash scripts/monitoring/setup-monitoring.sh",
    "monitoring:alerts": "node scripts/monitoring/setup-alerts.js",
    "monitoring:dashboard": "bash scripts/monitoring/deploy-dashboard.sh",
    
    "docker:build": "docker-compose -f docker/compose/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/compose/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/compose/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/compose/docker-compose.yml logs -f",
    "docker:security": "docker-compose -f docker/compose/security-stack.yml up -d",
    
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:logs": "kubectl logs -f deployment/q2-token-platform",
    
    "performance:lighthouse": "lighthouse-ci autorun",
    "performance:bundle": "npm run build:analyze && bundlewatch",
    "performance:audit": "node scripts/performance/audit.js",
    
    "clean": "rimraf .next out dist reports coverage",
    "clean:deps": "rimraf node_modules package-lock.json && npm install",
    "clean:cache": "rimraf .next/cache",
    
    "prepare": "husky install && prisma generate",
    "pre-commit": "lint-staged && npm run type-check && npm run test:unit:security",
    "pre-push": "npm run test:security && npm run build",
    "postinstall": "patch-package && npm run security:audit",
    
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    
    "docs:build": "typedoc --out docs/api src/",
    "docs:serve": "http-server docs/api -p 3001",
    "docs:security": "bash scripts/docs/generate-security-docs.sh"
  },
