{
  "name": "q2-token-platform",
  "version": "2.0.0",
  "description": "Q2 Token Platform with Futures Trading Bot",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit && snyk test",
    "security:scan": "./scripts/security/monitoring/scan-vulnerabilities.sh",
    "test": "jest",
    "test:security": "jest tests/security",
    "docker:build": "docker build -t q2-platform .",
    "docker:run": "docker-compose up -d"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.263.1",
    "recharts": "^2.8.0",
    "next-intl": "^3.0.0",
    "jsonwebtoken": "^9.0.2",
    "@types/jsonwebtoken": "^9.0.3",
    "bcryptjs": "^2.4.3",
    "@types/bcryptjs": "^2.4.4",
    "crypto-js": "^4.1.1",
    "@types/crypto-js": "^4.1.2",
    "node-forge": "^1.3.1",
    "@types/node-forge": "^1.3.5",
    "speakeasy": "^2.0.0",
    "@types/speakeasy": "^2.0.7",
    "ws": "^8.14.0",
    "@types/ws": "^8.5.6",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "@types/cors": "^2.8.14",
    "winston": "^3.10.0",
    "axios": "^1.5.0",
    "zod": "^3.22.0",
    "prisma": "^5.4.0",
    "@prisma/client": "^5.4.0",
    "redis": "^4.6.0",
    "@types/redis": "^4.0.11"
  },
  "devDependencies": {
    "eslint": "^8.51.0",
    "eslint-config-next": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.0",
    "jest-environment-jsdom": "^29.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "snyk": "^1.1230.0",
    "docker": "^1.0.0",
    "nodemon": "^3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run security:audit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}