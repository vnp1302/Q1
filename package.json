{
  "name": "q2-token-platform",
  "version": "2.1.0",
  "private": true,
  "description": "Enterprise-grade Q2 Token Platform with advanced security features",
  "keywords": ["blockchain", "defi", "security", "enterprise", "nextjs"],
  "author": "Q2 Token Platform Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --config .eslintrc.security.js",
    "lint:fix": "next lint --fix --config .eslintrc.security.js",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "npm run test:unit:security && npm run test:e2e:security",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:unit:security": "jest --testPathPattern=__tests__/security",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "playwright test",
    "test:e2e:security": "playwright test tests/security",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "npx @nodesecure/scanner --input .",
    "security:snyk": "snyk test --severity-threshold=medium",
    "security:sri": "bash scripts/security/frontend/generate-sri.sh",
    "security:headers": "node scripts/security/validate-headers.js",
    "i18n:extract": "i18next-scanner --config i18next-scanner.config.js",
    "i18n:validate": "node scripts/i18n/validate-translations.js",
    "build:analyze": "ANALYZE=true npm run build",
    "build:docker": "docker build -t q2-token-platform .",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "prepare": "husky install",
    "pre-commit": "lint-staged && npm run type-check && npm run test:unit:security"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "@next/bundle-analyzer": "^14.2.0",
    "@prisma/client": "^5.15.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-button": "^1.0.4",
    "@radix-ui/react-card": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-form": "^0.0.3",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "lucide-react": "^0.395.0",
    "recharts": "^2.12.7",
    "react-hook-form": "^7.52.0",
    "@hookform/resolvers": "^3.6.0",
    "zod": "^3.23.8",
    "jose": "^5.4.0",
    "@simplewebauthn/server": "^10.0.0",
    "@simplewebauthn/browser": "^10.0.0",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.3",
    "bcryptjs": "^2.4.3",
    "argon2": "^0.40.3",
    "rate-limiter-flexible": "^5.0.3",
    "dompurify": "^3.1.5",
    "isomorphic-dompurify": "^2.12.0",
    "helmet": "^7.1.0",
    "redis": "^4.6.14",
    "ioredis": "^5.4.1",
    "prisma": "^5.15.0",
    "next-i18next": "^15.3.0",
    "react-i18next": "^14.1.2",
    "i18next": "^23.11.5",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^2.5.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.52.0",
    "@opentelemetry/auto-instrumentations-node": "^0.47.1",
    "@sentry/nextjs": "^8.13.0",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "crypto-js": "^4.2.0",
    "node-forge": "^1.3.1",
    "@noble/curves": "^1.4.0",
    "@noble/hashes": "^1.4.0",
    "tweetnacl": "^1.0.3",
    "framer-motion": "^11.2.10",
    "react-query": "^3.39.3",
    "zustand": "^4.5.2",
    "immer": "^10.1.1",
    "date-fns": "^3.6.0",
    "react-hot-toast": "^2.4.1",
    "react-dropzone": "^14.2.3",
    "react-virtualized": "^9.22.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "@types/dompurify": "^3.0.5",
    "@types/qrcode": "^1.5.5",
    "typescript": "^5.5.2",
    "tailwindcss": "^3.4.4",
    "postcss": "^8.4.38",
    "autoprefixer": "^10.4.19",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-sonarjs": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/user-event": "^14.5.2",
    "playwright": "^1.45.0",
    "@playwright/test": "^1.45.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "i18next-scanner": "^4.4.0",
    "@nodesecure/scanner": "^6.1.0",
    "snyk": "^1.1292.0",
    "madge": "^7.0.0",
    "bundlewatch": "^0.3.3",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["eslint --fix --config .eslintrc.security.js", "prettier --write"],
    "*.{json,md,yml,yaml}": ["prettier --write"]
  },
  "bundlewatch": {
    "files": [
      {
        "path": ".next/static/chunks/*.js",
        "maxSize": "250kb"
      }
    ]
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  }
}
