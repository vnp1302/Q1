{
  "extends": [
    "eslint:recommended",
    "@typescript-eslint/recommended",
    "plugin:security/recommended"
  ],
  "plugins": ["security"],
  "rules": {
    "no-console": "warn",
    "security/detect-object-injection": "error",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["crypto"],
            "message": "Use our secure crypto utilities instead of direct crypto imports"
          }
        ]
      }
    ]
  }
}
